@using AppHarbuz1.Models.Account;
@model AccountViewModel

@{
    Layout = null;

    var isVisibleRegisterTab = Model?.RegisterViewModel != null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title> Short Authorization</title>

        <link rel="stylesheet" href="~/lib/font-awesome/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/scc/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/AppHarbuz1.styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="container-fluid d-flex align-items-center justify-content-center flex-column" style="min-height: 100vh;">
            <main role="main" style="width: 400px" class="mt-5">
                <div class="card">
                    <div class="card-header d-flex justify-content-center">
                        <span class="test-primary fw-bold" style="font-size: 25px">
                            <i class="fa-solid fw-clipboard-list"></i> List of tasks
                        </span>
                    </div>
                    <div class="card-body ps-5 pe-4">
                        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button 
                                    class="nav-link @(!isVisibleRegisterTab ? "" : "active")"
                                    id="tab-login" data-bs-toggle="pill" data-bs-target="#pills-login"
                                    role="tab" aria-controls="pills-login" aria-selected="@(isVisibleRegisterTab ? "false" : "true")">

                                    Log in
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button
                                    class="nav-link @(!isVisibleRegisterTab ? "active" : "")"
                                    id="tab-register" data-bs-toggle="pill" data-bs-target="#pills-register"
                                    role="tab" aria-controls="pills-register" aria-selected="@(isVisibleRegisterTab ? "true" : "false")">

                                    Register
                                </button>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade @(!isVisibleRegisterTab ? "" : "show active")" id="pills-login" role="tabpanel">
                            @{
                                ViewData.TemplateInfo.HtmlFieldPrefix = "l";
                                await Html.RenderPartialAsync("_Login", Model?.LoginViewModel);
                            }
                            </div>
                            <div class="tab-pane fade @(!isVisibleRegisterTab ? "show active" : "")" id="pills-register" role="tabpanel">
                            @{
                                ViewData.TemplateInfo.HtmlFieldPrefix = "r";
                                await Html.RenderPartialAsync("_Register", Model?.RegisterViewModel);
                            }
                            </div>
                        </div>
                    </div>
                </div>

                <footer class="footer text-end mt-3">
                    &copy; 2024 Vistula - Vladyslav Harbuz
                </footer>
            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>